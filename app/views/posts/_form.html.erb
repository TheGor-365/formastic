<%= semantic_form_for @post do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :category, collection: Category.all, prompt: "Select a category" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, class: "btn btn-success" %>
  <% end %>
<% end %>
